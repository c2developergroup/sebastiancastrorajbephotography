---

<html lang="es" class="light">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/svg+xml" href="/sebasphotograpgysquarelogowhite.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sebastián Castro Rajbe Photography</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-white overflow-x-clip">
    <div id="root">
      {/* showNavbar && <NavBar /> */}
      <div id="content">
        <slot />
      </div>
    </div>
    <script
      type="text/javascript"
      src="https://cdn.jsdelivr.net/npm/@floating-ui/core@1.5.3"></script>
    <script
      type="text/javascript"
      src="https://cdn.jsdelivr.net/npm/@floating-ui/dom@1.5.4"></script>

    <script>
      document.addEventListener("DOMContentLoaded", (_event) => {
        document.querySelectorAll("[data-js-display]")!!.forEach(e => {
          const element = e as HTMLElement;
          element.style.display = element.dataset.jsDisplay || "block";
        });
      });
    </script>
  </body>
</html>
