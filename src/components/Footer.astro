    src={`${import.meta.env.BASE_URL}/sebastiancastrorajbephotography-square-logo-white.svg`}
    class="absolute -left-64 -bottom-52 opacity-5 w-[30rem] z-0" />
  <footer>
    <div
      class="tiny:w-[90%] m-auto flex flex-wrap items-start justify-between px-6 tiny:px-0"
    >
      <div class="pt-[10px] md:pr-[40px] basis-full md:basis-1/2 z-10">
        <img src={`${import.meta.env.BASE_URL}/sebastiancastrorajbephotography-logo-large-white.svg`} class="w-[30rem] mb-2" />
        <div class="flex flex-col gap-4">
          <a href="https://www.linkedin.com/in/sebastiancastrorajbe" target="_blank">
            <div class="flex items-center ps-5">
              <img
                src={`${import.meta.env.BASE_URL}/footer_social_linkedin.svg`}
