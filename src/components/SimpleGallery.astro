---
const images = [
  { src: '/IMG_0233.jpg', w: 5184, h: 3456 },
  { src: '/IMG_0178.jpg', w: 5179, h: 3456 },
  { src: '/IMG_9545.jpg', w: 5184, h: 3456 },
];
---

<div id="app">
  <div class="pswp-gallery grid grid-cols-3 p-20 gap-10" id="my-gallery">
    {images.map((image) => (
      <a
        href={image.src}
        data-pswp-width={image.w}
        data-pswp-height={image.h}
        data-cropped="true"
        target="_blank"
        class="flex items-center justify-center"
      >
        <img
          src={image.src}
          alt=""
        />
      </a>
    ))}
  </div>
</div>
<script>
  import PhotoSwipeLightbox from "photoswipe/lightbox";
  import "photoswipe/style.css";

  const lightbox = new PhotoSwipeLightbox({
    gallery: "#my-gallery",
    children: "a",
    pswpModule: () => import("photoswipe"),
  });

  lightbox.init();
</script>