---
import "../css/main.css";
import HamburgerMenu from "../components/HamburgerMenu.astro";
import MainPage from "../components/MainPage.astro";
import SimpleGallery from "../components/SimpleGallery.astro";
import TopRightButton from "../components/TopRightButton.astro";

import { RxHamburgerMenu } from "react-icons/rx/index";
---

<MainPage>
  <TopRightButton ReactIcon={RxHamburgerMenu} />
  <HamburgerMenu dark={true} />

  <section id="inicio" class="relative">
    <img
      src={`${import.meta.env.BASE_URL}/toyota-landing-page.jpg`}
      class="w-full object-cover object-[100%,100%] -z-10 hidden sm:block"
    />
    <img
      src={`${import.meta.env.BASE_URL}/toyota-landing-page-phone.jpg`}
      class="w-full object-cover object-[100%,100%] -z-10 sm:hidden"
    />
  </section>
  <section>
    <img src={`${import.meta.env.BASE_URL}/agya-logo-black.png`} class="w-1/3 m-auto pb-8 pt-20" />
    <SimpleGallery images={[
      { src: `${import.meta.env.BASE_URL}/IMG_0233.jpg`, w: 5184, h: 3456 },
      { src: `${import.meta.env.BASE_URL}/IMG_0178.jpg`, w: 5179, h: 3456 },
      { src: `${import.meta.env.BASE_URL}/IMG_9545.jpg`, w: 5184, h: 3456 },
    ]} />
  </section>
  <section>
    <img src={`${import.meta.env.BASE_URL}/corolla-cross-logo-black.png`} class="w-1/3 m-auto pb-8 pt-20" />
  </section>
</MainPage>
