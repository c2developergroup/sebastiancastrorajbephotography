      { src: `${import.meta.env.BASE_URL}/IMG_0159.jpg`, w: 5184, h: 3456 },
      { src: `${import.meta.env.BASE_URL}/IMG_0168.jpg`, w: 5179, h: 3456 },
    ]} />
    <SimpleVidGallery videos={[
      { src: `${import.meta.env.BASE_URL}/VID_4FB3D55D-0F54-4DDE-805C-EB54872BDD24.mp4`, w: 1080, h: 1920 },
