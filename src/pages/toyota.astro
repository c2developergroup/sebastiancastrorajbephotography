      src={`${import.meta.env.BASE_URL}/toyota-landing-page-phone.jpg`}
      class="w-full object-cover object-[100%,100%] -z-10 sm:hidden"
    />
  </section>
  <section>
    <img src={`${import.meta.env.BASE_URL}/agya-logo-black.png`} class="w-1/3 m-auto pb-8 pt-20" />
    <SimpleGallery images={[
      { src: `${import.meta.env.BASE_URL}/IMG_0296.jpg`, w: 5184, h: 3456 },
      { src: `${import.meta.env.BASE_URL}/IMG_0279.jpg`, w: 5184, h: 3456 },
      { src: `${import.meta.env.BASE_URL}/IMG_0226.jpg`, w: 5179, h: 3456 },
      { src: `${import.meta.env.BASE_URL}/IMG_0341.jpg`, w: 5184, h: 3456 },
